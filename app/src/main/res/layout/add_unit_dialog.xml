<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/AddUnitDialogNickname"
        android:digits="qwertzuiopasdfghjklyxcvbnmQWERTZUIOPASDFGHJKLYXCVBNM#-0123456789' "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nickname"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/AddUnitDialogID"
        android:digits="qwertzuiopasdfghjklyxcvbnmQWERTZUIOPASDFGHJKLYXCVBNM-0123456789' "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:inputType="textPersonName"
        android:layout_below="@+id/AddUnitDialogNickname"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/AddUnitDialogTargetTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AddUnitDialogID"
        android:layout_alignParentStart="true"
        android:hint="Target Temperature"
        android:inputType="numberDecimal" />
</RelativeLayout>